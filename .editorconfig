root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_size = 4
trim_trailing_whitespace = false

# space indentation for Kotlin
[*.{kt,kts}]
indent_size = 4
ktlint_disabled_rules = trailing-comma-on-declaration-site, trailing-comma-on-call-site

[Makefile]
indent_style = tab